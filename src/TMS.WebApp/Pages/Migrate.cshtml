@page
@model TMS.WebApp.Pages.MigrateModel
@{
    ViewData["Title"] = "Database Migrations";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<h1>Database Migrations</h1>

<form method="post">
    <button type="submit" class="btn btn-primary">Run All Migrations</button>
</form>

@if (Model.MigrationResults?.Any() == true)
{
    <div class="mt-4">
        <h3>Results:</h3>
        <div class="row">
            @foreach (var result in Model.MigrationResults)
            {
                <div class="col-md-6 mb-4">
                    <div class="card @(result.Success ? "border-success" : "border-danger") h-100">
                        <div class="card-header">
                            <strong>@result.ServiceName</strong>
                            <span class="float-end">
                                @if (result.Success)
                                {
                                    <span class="badge bg-success">Success</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Failed</span>
                                }
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@result.Message</h5>

                            @if (result.AppliedMigrations?.Any() == true)
                            {
                                <div class="mt-3">
                                    <h6 class="text-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        Applied Migrations (@result.AppliedMigrations.Count)
                                    </h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var migration in result.AppliedMigrations)
                                        {
                                            <li class="list-group-item">
                                                <small><code>@migration</code></small>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (result.PendingMigrations?.Any() == true)
                            {
                                <div class="mt-3">
                                    <h6 class="text-warning">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        Pending Migrations (@result.PendingMigrations.Count)
                                    </h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var migration in result.PendingMigrations)
                                        {
                                            <li class="list-group-item">
                                                <small><code>@migration</code></small>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(result.RawResponse) && !result.Success)
                            {
                                <div class="mt-3">
                                    <h6 class="text-danger">Error Details:</h6>
                                    <div class="alert alert-danger p-2">
                                        <small><pre class="mb-0">@result.RawResponse</pre></small>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer text-muted">
                            <small>@result.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-3 text-center">
            <button type="button" class="btn btn-outline-secondary btn-sm"
                    onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i> Refresh View
            </button>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No migration results to display. Click "Run All Migrations" to start.
    </div>
}

<!-- Добавьте Bootstrap Icons если нет -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 0.85rem;
    }
</style>