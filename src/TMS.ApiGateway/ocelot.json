    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/swagger/{everything}",
      "DownstreamPathTemplate": "/swagger/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8081
        }
      ],
      "DangerousAcceptAnyServerCertificateValidator": true,
      "NoLoadBalancer": true,
      "RouteIsCaseSensitive": false,
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 0
      }
    },

    // Migrations
    //    GET /api/auth/migrate
    //    GET /api/tasks/migrate
    //    GET /api/notify/migrate
    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/api/auth/migrate",
      "DownstreamPathTemplate": "/migrate",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "tms-auth-service",
          "Port": 8081
        }
      ],
      "DangerousAcceptAnyServerCertificateValidator": true,
      "SwaggerKey": "tms-auth-service"
    },
    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/api/tasks/migrate",
      "DownstreamPathTemplate": "/migrate",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "tms-task-service",
          "Port": 8081
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "DangerousAcceptAnyServerCertificateValidator": true,
      "SwaggerKey": "tms-task-service"
    },
    {
      "UpstreamHttpMethod": [ "GET" ],
